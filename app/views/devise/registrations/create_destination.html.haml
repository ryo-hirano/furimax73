.single-containers
  %header.single-header
    %h1.single-header__logo
      = link_to root_path do
        =image_tag(asset_path("logo/logo.png"))
    %nav.single-header__progress
      %ol
        %li.text#first
          会員情報
          .round-gray
        %li.text
          お届け先住所入力
          .round-gray
        %li.text-active#end
          完了
          .round-blue
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__title
        会員登録完了
      .single-main__container__done
        %h3.thanx
          ありがとうございます。
        %p.subtitle
          会員登録が完了いたしました。
      .single-main__container__back
        = link_to "トップへ戻る", root_path

= render partial: 'shared/sub_footer'