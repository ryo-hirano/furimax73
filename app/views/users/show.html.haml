= render partial: 'shared/main_header'

.MypageDisplay  
  .MypageContainer
    .side-var
      .mypage-nav
        %ul.mypage-nav__list
        = link_to user_path do
          %li.mypage-nav__list__item-top マイページ
          = link_to new_product_path do   
            %li.mypage-nav__list__item
              .item-name 出品する
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 出品した商品-出品中
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 出品した商品-取引中
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 出品した商品-売却済み
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 購入した商品-取引中
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 購入した商品-過去の取引
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 購入した商品-売却済み
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 評価一覧
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name お問い合わせ
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x                                                                  

        %h3.mypage-nav__head FURIペイ
        %ul.mypage-nave__list
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 売上・振込申請
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x 
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name ポイント
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x       
               
        %h3.mypage-nav__head 設定
        %ul.mypage-nave__list
          = link_to edit_user_path(current_user) do
            %li.mypage-nav__list__item
              .item-name プロフィール
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 発送元・お届け先住所変更
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x 
          = link_to new_card_path do   
            %li.mypage-nav__list__item
              .item-name 支払い方法
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name メール/パスワード
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 本人情報
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x 
          = link_to user_path do   
            %li.mypage-nav__list__item
              .item-name 電話番号の確認
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x 
          = link_to destroy_user_session_path, method: :delete do   
            %li.mypage-nav__list__item
              .item-name ログアウト
              .icon-arrow-right
                .fa.fa-caret-right.fa-2x        
                
    .main-content
      .user-icon-box
        = link_to edit_user_path(current_user) do
          .user-icon
            = image_tag current_user.user_image.url
        .trade-info
          .trade-info__nickname
            = current_user.nickname
          .trade-info__count  
            .trade-info__count__sell-title 出品数
            .trade-info__count__sell-count 25      
            .trade-info__count__buy-title 購入数
            .trade-info__count__buy-count 17

      %ul.trade-tab
        %li.active 出品リスト
        %li 購入リスト
  
      .tab-area
        - @products.each do |product|
          %ul.list-show
            = link_to product_path(product) do
              %li.item
                .image-box
                  .img
                    = image_tag product.images.first.src.url
                .name
                  = product.name
                .updated
                  = product.updated_at.strftime("%Y-%m-%d %H:%M")  
          %ul
            = link_to user_path do
              %li.item
                .image-box
                  .img
                    = image_tag product.images.first.src.url
                .name キーケース
                .updated
                  = product.updated_at.strftime("%Y-%m-%d %H:%M")   
            = link_to user_path do
              %li.item
                .image-box
                  .img
                    = image_tag product.images.first.src.url
                .name 手帳
                .updated
                  = product.updated_at.strftime("%Y-%m-%d %H:%M")  
            = link_to user_path do
              %li.item
                .image-box
                  .img
                    = image_tag product.images.first.src.url
                .name ハンカチ
                .updated
                  = product.updated_at.strftime("%Y-%m-%d %H:%M")  
            = link_to user_path do
              %li.item
                .image-box
                  .img
                    = image_tag product.images.first.src.url
                .name ブレスレット
                .updated
                  = product.updated_at.strftime("%Y-%m-%d %H:%M") 

= render partial: 'shared/main_footer'                   